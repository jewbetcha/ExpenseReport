<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Expense Report</title>
</head>
<body>
    <div class="container">
        <div class="expenses">
            <h3>Expenses</h3>
            <div class="header">
                    <div>Name</div>
                    <div>Cost</div>
                    <div>Type</div>
                    <div>Method</div>
                    <div>Date</div>
                    <div>Delete</div>
            </div>
            <% if (expenses.length === 0) { %>
            <div class="row">
                <div>
                    There are no expenses reported here, add one with the form below!
                </div>
            </div>
            <% } else { %>
            <% for(var i=0; i<expenses.length; i++) {%>
                <div class="row">
                    <div><%= expenses[i].name %></div>
                    <div>$<%= expenses[i].cost %></div>
                    <div><%= expenses[i].type %></div>
                    <div><%= expenses[i].method %></div>
                    <div><%= expenses[i].date %></div> 
                    <div>
                        <button class="delete" type="delete" name="<%= expenses[i].name %>">x</button>
                    </div>
                </div>
            <% } }%>
        </div>

        <div class="form__wrapper">
            <h3>Add An Expense</h3>
            <form action="/expenses" method="POST">
                <div class="row">
                    <input type="text" placeholder="Name" name="name" required>
                    <input type="number" placeholder="Cost" name="cost" required>
                </div>
                <div class="row">
                    <select name="type">
                        <option value="Food">Food</option>
                        <option value="Fun">Fun</option>
                        <option value="Essential">Essential</option>
                        <option value="Non-Essential">Non-Essential</option>
                    </select>
                    <select name="method">
                        <option value="Cash">Cash</option>
                        <option value="Debit">Debit</option>
                        <option value="Credit">Credit</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="row">
                    <input type="date" name="date">
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <script src="bundle.js"></script>
</body>
</html>